options {
	directory "/var/cache/bind";	
	response-policy {
		zone "trustpositifkominfo"
		policy cname lamanlabuh.aduankonten.id
		max-policy-ttl 30
		log no;
	}
	recursive-only yes
	qname-wait-recurse no
